{
  "name": "modern-text",
  "type": "module",
  "version": "1.9.1",
  "packageManager": "pnpm@10.18.1",
  "description": "Measure and render text in a way that describes the DOM.",
  "author": "wxm",
  "license": "MIT",
  "homepage": "https://github.com/qq15725/modern-text",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qq15725/modern-text.git"
  },
  "bugs": {
    "url": "https://github.com/qq15725/modern-text/issues"
  },
  "keywords": [
    "text",
    "text-measure",
    "text-texture",
    "text-canvas",
    "measure",
    "typescript"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./web-components": {
      "types": "./dist/web-components/index.d.ts",
      "import": "./dist/web-components/index.mjs",
      "require": "./dist/web-components/index.cjs"
    },
    "./*": "./*"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "browser": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && unbuild",
    "dev": "vite docs",
    "lint": "eslint ./src",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "release": "bumpp package.json --commit \"release: v%s\" --push --all --tag",
    "start": "esno src/index.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "diff": "^8.0.2",
    "modern-font": "^0.4.4",
    "modern-idoc": "^0.10.1",
    "modern-path2d": "^1.4.10"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.0.0",
    "@types/node": "^24.8.1",
    "bumpp": "^10.3.1",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9.38.0",
    "lint-staged": "^16.2.4",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.3",
    "unbuild": "^3.6.1",
    "vite": "^7.1.10",
    "vitest": "^3.2.4"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": ""
  }
}
